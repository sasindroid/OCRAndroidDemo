<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sasi.ocrandroidimagecropperdemo.MainActivity1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="scanNow"
        android:text="Click here to scan" />
    
    <ImageView
        android:id="@+id/ivScannedCropped"
        android:layout_width="match_parent"
        android:src="@drawable/android"
        android:scaleType="fitCenter"
        android:layout_height="200dp" />

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tvScannedData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Awaiting scan." />
    </ScrollView>
</LinearLayout>
